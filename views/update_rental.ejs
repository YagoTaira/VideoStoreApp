<!DOCTYPE html>
<html>
    <head>
      <title></title>
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>
  <body>
    <% if(error) { %>
        <p class="error">Error: <%= error %></p>
    <% } %>
    <h2>Update Rental</h2>
    <div class="std-body">
    <form action="/rental/update" method="post">
      <input type="hidden" name="rent_id" value="<%= rent_id %>" />
      <label for="rent_date">Rental date</label>
      <input type="text" name="rent_date" />
      <br>
      <label for="return_date">Return date</label>
      <input type="text" name="return_date"/>
      <br>
      <label for="cust_id">Customer name</label>
      <select name="cust_id">
        <% for(var i=0; i < rental.length; i++) { %>
          <option value="<%= rental[i].cust_id %>"><%= rental[i].cust_name %></option>
        <% } %>
      </select>
      <br>
      <label for="employee_id">Employee name</label>
      <select name="employee_id">
        <% for(var i=0; i < rental.length; i++) { %>
          <option value="<%= rental[i].employee_id %>"><%= rental[i].employee_name %></option>
        <% } %>
      </select>
      <br>
      <label for="movie_id">Movie name</label>
      <select name="movie_id">
        <% for(var i=0; i < rental.length; i++) { %>
          <option value="<%= rental[i].movie_id %>"><%= rental[i].movie_name %></option>
        <% } %>
      </select>
      <br>
      <label for="cost">Cost</label>
      <input type="text" name="cost"/>
      <br>
      <label for="returned">Returned</label>
      <input type="checkbox" name="returned">
      <br>
      <br>
      <button class="" type="submit">Update rental</button>
    </form>
    <br>
    <br>
    <button onclick="window.location.href='/rental'" class="btn btn-secondary btn-sm active">Previous Page</button>
  </body>
  </html>
